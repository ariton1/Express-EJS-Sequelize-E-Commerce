<% title = "Mnemonic" %>
<%- include('../partials/header'); %>	
<%- include ('../partials/navbar'); %>	
<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-1/3">
	<h1 class="text-2xl font-bold text-center mb-4">Mnemonic</h1>
	<p class="text-center mb-4"><%= mnemonic %></p>
	<p class="text-center text-gray-600 text-sm">
		Please make sure to save your mnemonic in a safe place before proceedeing. You will
		need it to reset your password in the future.
	</p>
	<form
		class="text-center mt-4"
		action="/users/mnemonic"
		method="post"
	>
		<button
			type="submit"
			class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
		>
			Proceed
		</button>
	</form>
</div>
<%- include('../partials/footer'); %>
