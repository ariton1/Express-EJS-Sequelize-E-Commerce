<% title = "Delete Account" %>
<%- include('../../partials/header'); %>
<%- include ('../../partials/navbar'); %>
	<div class="container mx-auto py-10 px-6">
		<h1 class="text-2xl font-bold mb-6">Delete Account</h1>
		<form action="/users/settings/delete-account" method="post">
			<% if (flash.error) { %>
			<div class="bg-red-500 p-4 mb-4">
				<% flash.error.forEach((msg) => { %>
				<p><%= msg %></p>
				<% }); %>
			</div>
			<% } %>
			<div class="mb-4">
				<label
					for="password"
					class="block text-gray-700 font-bold mb-2"
					>Password</label
				>
				<input
					type="password"
					name="password"
					id="password"
					class="border rounded py-2 px-3 w-full"
					required
				/>
			</div>
			<div class="mb-4">
				<label
					for="confirmPassword"
					class="block text-gray-700 font-bold mb-2"
					>Confirm Password</label
				>
				<input
					type="password"
					name="confirmPassword"
					id="confirmPassword"
					class="border rounded py-2 px-3 w-full"
					required
				/>
			</div>
			<div class="mb-4">
				<label
					for="mnemonic"
					class="block text-gray-700 font-bold mb-2"
					>Mnemonic</label
				>
				<input
					type="text"
					name="mnemonic"
					id="mnemonic"
					class="border rounded py-2 px-3 w-full"
					required
				/>
			</div>

			<!-- Display a submit button -->
			<button type="submit" class="btn-blue rounded py-2 px-4">
				Delete Account
			</button>
		</form>
	</div>
	<%- include('../../partials/footer'); %>
