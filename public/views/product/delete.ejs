<% title = "Delete Product" %>
<%- include('../partials/header'); %>	
<%- include('../partials/navbar'); %>

<div class="container mx-auto mt-8">
  <% if (flash.error) { %>
    <div class="bg-red-500 p-4 mb-4">
      <% flash.error.forEach((msg) => { %>
        <p><%= msg %></p>
      <% }); %>
    </div>
  <% } %>

  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h1 class="text-2xl font-bold text-center mb-4">Delete Product</h1>
    
    <p class="text-center text-red-500 mb-4">
      Are you sure you want to delete the product: <strong><%= product.name %></strong>?
    </p>

    <form class="flex items-center justify-center gap-4" action="/product/<%= product.id %>/delete" method="post">
      <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mr-2">Yes</button>
      <a href="/product/<%= product.id %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">No</a>
    </form>
  </div>
</div>

<%- include('../partials/footer'); %>
