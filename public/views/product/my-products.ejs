<% title = "My Products" %>
<%- include('../partials/header'); %>	
<%- include('../partials/navbar'); %>

<div class="container mx-auto mt-8">
  <% if (flash.error) { %>
    <div class="bg-red-500 p-4 mb-4">
      <% flash.error.forEach((msg) => { %>
        <p><%= msg %></p>
      <% }); %>
    </div>
  <% } %>

  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h1 class="text-2xl font-bold text-center mb-4">My Products</h1>

    <% if (userProducts.length === 0) { %>
      <p class="text-center text-gray-500 mb-4">You haven't added any products yet.</p>
    <% } else { %>
      <ul>
        <% userProducts.forEach(product => { %>
          <li class="mb-4">
            <strong><%= product.name %></strong>
            <div class="flex items-center space-x-2 mt-2">
              <a href="/product/<%= product.id %>" class="text-blue-500 hover:underline">View</a>
              <a href="/product/<%= product.id %>/edit" class="text-green-500 hover:underline">Edit</a>
              <a href="/product/<%= product.id %>/delete" class="text-red-500 hover:underline">Delete</a>
            </div>
          </li>
        <% }); %>
      </ul>
    <% } %>
  </div>
</div>

<%- include('../partials/footer'); %>